<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <script src="http://cdn.staticfile.org/jquery/2.1.1-rc2/jquery.js"></script>
    <style type="text/css">
      <%- css %>
    </style>

  </head>
  <body>
    <div class="wrapper">
      <ul class="breads">
        <li>目录:</li>
        <% breads.forEach(function (value) { %>
          <li><a data-href="<%= value.path %>" class="bread"><%= value.name %></a></li>
        <% }) %>
      </ul>
      <div class="cur-path">当前路径:<%= realPath %></div>
      <div class="tree">
        <ul>
          <%- html %>
        </ul>
      </div>
    </div>

    <script>
      $(function () {
        var $tree = $('.tree');
        $('>ul ul', $tree).hide();
        $('span', $tree).prepend($("<i class='fa fa-plus fa-fw'></i>"))
        $tree.find('span').on('click', function (e) {
          var $this = $(this);
          var $ul = $this.parent().children('ul');
          if ($ul.length > 0) {
            if ($ul.is(":visible")) {
              $ul.slideUp();
              $this.children("i").removeClass("fa-minus").addClass("fa-plus");
            } else {
              $ul.slideDown();
              $this.children("i").removeClass("fa-plus").addClass("fa-minus");
            }
          }
        });
      });
    </script>

  </body>
</html>